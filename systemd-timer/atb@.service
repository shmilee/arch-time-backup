[Unit]
Description=Daily arch-time-backup for %i
Documentation=https://github.com/shmilee/arch-time-backup
ConditionPathExists=/usr/local/bin/atb.sh

[Service]
Type=oneshot
ExecStart=/usr/local/bin/atb.sh --strategy-noconfirm -p %i

